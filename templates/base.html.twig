<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
  </head>

  
  <style> 

    body {
      margin: 0;
      background-color: #d1d1e0;
    }
    a {
      color: darkSlateGrey;
      text-decoration: none;
    }
    .navbar { 
      background-color: #F3F3F3;
      display: flex;    
      justify-content: space-around;
      height: 75px
    }
    .submenu {
      display:flex; 
      justify-content:space-around;  
      width: 25%;   
      align-self:center
    }
  </style>
  <body>
    <div class="navbar">
      <div class= "submenu">
        <a href="/">Home</a> 
        {# <a href="/">Regles</a>  #}
        {%if app.user %}
          <a href="{{ path('order_pizza') }}">Laissez vous tenter !</a>
        {% endif %}
      </div>
      {% if app.user %}
        <div class="submenu">
          Bonjour {{ app.user.username }} !
        </div>
      {% endif %}
      <div class = "submenu" >
        {% if app.user %}
          {# <a href="/profil">Profil</a> #}
          <a href="{{ path('app_logout') }}">Logout</a>
        {% else %}          
          <a href="{{ path('app_register') }}">S'inscrire</a>
          <a href="{{ path('app_login') }}">Se connecter</a>
        {% endif %}
      </div>
    </div>
    <main>
      {% block body %}
      {% endblock %}
    </main>
  </body>
</html>
